<div class="section">
  <div class="section-summary">
    <h1>Rules</h1>
    <p>These are the rules you created.</p>
  </div>

  <div class="section-content">
    <% @rules.each do |rule| %>
      <div class="section-row">
        <div class="section-cell">
          <%= rule.name %>

          <% if rule.enabled? %>
            <span class="tag green">
              Enabled
            </span>
          <% else %>
            <span class="tag orange">
              Disabled
            </span>
          <% end %>

          <ul class="segmented right">
            <li><%= link_to 'Edit', rule_path(rule), class: %w(btn default btn-slim) %></li>
            <li><%= link_to 'Delete', rule_path(rule), remote: true, method: :delete, class: %w(btn destroy btn-slim), data: { confirm: "Delete \"#{rule.name}\"?" } %></li>
          </ul>

        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  var button = Button.create(app, { label: 'New Rule' });

  button.subscribe('click', () => {
    Turbolinks.visit('<%= new_rule_path %>');
  });
  
  TitleBar.create(app, {
    title: 'Rules',
    buttons: {
      primary: button
    }
  });
</script>
