<%= react_component("rules/index", { rules: @rules.as_json }) %>

<script>
  var button = Button.create(app, { label: 'New Rule' });

  button.subscribe('click', () => {
    Turbolinks.visit('<%= new_rule_path %>');
  });
  
  TitleBar.create(app, {
    title: 'Rules',
    buttons: {
      primary: button
    }
  });
</script>
